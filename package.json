{
  "name": "gas-react-template",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo template for building web apps on Google Apps Script with React + gsquery",
  "type": "module",
  "scripts": {
    "dev:client": "pnpm --filter @gas-app/client dev",
    "dev:server": "pnpm --filter @gas-app/dev-server dev",
    "dev": "concurrently -n client,server -c blue,green \"pnpm dev:client\" \"pnpm dev:server\"",
    "build": "node scripts/build.mjs",
    "push": "node scripts/build.mjs && pnpm exec clasp push --force",
    "deploy": "node scripts/deploy.mjs dev",
    "deploy:dev": "node scripts/deploy.mjs dev",
    "deploy:production": "node scripts/deploy.mjs production",
    "typecheck": "tsc -b packages/core packages/client packages/gas-server",
    "setup": "node scripts/setup.mjs",
    "setup:sheet": "node scripts/set-sheet-id.mjs"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/plugin-transform-template-literals": "^7.27.1",
    "@google/clasp": "^3.2.0",
    "@types/google-apps-script": "^2.0.8",
    "concurrently": "^9.1.2",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  },
  "author": "juhyeonni",
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "@types/react": "^18.3.28",
      "@types/react-dom": "^18.3.7"
    }
  }
}
